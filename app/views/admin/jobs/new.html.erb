<h1> Add a job </h1>

<%= simple_form_for [:admin,@job] do |f| %>

<%= f.input :title, :label => "社群名称" %>
<%= f.input :description, :label => "介绍及联系方式" %>
<%= f.input :wage_lower_bound, :label => "社群人数下限" %>
<%= f.input :wage_upper_bound, :label => "社群人数上限" %>
<%= f.input :contact_email, :label => "联系人微信号" %>
<%= f.input :is_hidden, :label => ">>>请手动取消勾选，提交后，你就能马上看到新社群<<<"  %>


  <%= f.submit "Submit" %>
<% end %>
